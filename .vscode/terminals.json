{
    "autokill": true,
    "@see": "https://marketplace.visualstudio.com/items?itemName=fabiospampinato.vscode-terminals",
    "terminals": [
        {
            "name": "🔼 Run",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows %,-branchesUpdateFeatures,-descriptionInGithub,-aiGeneratedWallpaper% --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼⏎ Change CRLF to LF",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows lines --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼📦 Run update & audit dependencies",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows update%,auditDependencies --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼🍴 Run update feature branches",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows branchesUpdateFeatures --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼🖼️ Run AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --loop --workflows aiGeneratedWallpaper%,-aiGeneratedWallpaperPick --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "👉🖼️ Pick AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --loop --workflows aiGeneratedWallpaperPick --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🐈 Run Github description",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows description,descriptionInGithub --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔽 Clone",
            "command": "ts-node ./src/index.ts --clone",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼 Run workflows",
            "command": "ts-node ./src/index.ts --edit --workflows %,-lines,-descriptionInGithub,-aiGeneratedWallpaper% --projects %",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🧪👨🏽‍💻 Run one workflow on one project",
            "command": "ts-node ./src/index.ts --edit --workflows badges --projects spacetrim",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "📋🏤 List remote projects",
            "command": "ts-node ./src/index.ts --list-remote-projects",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "📋🏤 List local projects",
            "command": "ts-node ./src/index.ts --list-projects",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🕤 Git hours",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --aggregate --aggregator gitHours --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "📋⚙️ List workflows",
            "command": "ts-node ./src/index.ts --list-workflows",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼👑 Release major version",
            "command": "npm version major",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🚀 Release minor version",
            "command": "npm version minor",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🩹 Release patch version",
            "command": "npm version patch",
            "onlySingle": true,
            "focus": true
        }
    ]
}
