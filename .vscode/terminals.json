{
    "autokill": true,
    "@see": "https://marketplace.visualstudio.com/items?itemName=fabiospampinato.vscode-terminals",
    "terminals": [
        {
            "name": "🔼 Run",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows %,-revertLastBpeCommit,-branchesUpdateFeatures,-descriptionInGithub,-aiGeneratedWallpaper% --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼⏎ Change CRLF to LF",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows lines --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼📦 Run update & audit dependencies",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows update%,auditDependencies --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🔼🍴 Run update feature branches",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows branchesUpdateFeatures --projects %"
            ],
            "onlySingle": false,
            "focus": true
        },
        {
            "name": "🏭🖼️ Prepare AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows description,aiGeneratedWallpaperPrepare --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🚜🖼️ Land AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows aiGeneratedWallpaperLand --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🚜🖼️ Trigger AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --edit --loop --workflows aiGeneratedWallpaperTrigger --projects batch-project-editor"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🌾🖼️ Harvest AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows aiGeneratedWallpaperHarvest --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },

        {
            "name": "👉🖼️ Pick AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows aiGeneratedWallpaperPick --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "💸🖼️ Use AI–⁠generated wallpapers",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows aiGeneratedWallpaperUse% --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🖼️➰ Land & Harvest & Use AI–⁠generated wallpapers in a loop",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --loop --workflows aiGeneratedWallpaper%,-aiGeneratedWallpaperPrepare,-aiGeneratedWallpaperPick --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🐈 Run Github description",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --edit --workflows description,descriptionInGithub --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔽 Clone",
            "command": "ts-node ./src/index.ts --clone",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🔼🧪👨🏽‍💻 Run one workflow on one project",
            "command": "ts-node ./src/index.ts --edit --workflows badges --projects spacetrim",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "📋🏤 List remote projects",
            "command": "ts-node ./src/index.ts --list-remote-projects",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "📋🏤 List local projects",
            "command": "ts-node ./src/index.ts --list-projects",
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🕤 Git hours",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --aggregate --aggregator gitHours --projects %"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "🕤💙 Git hours for H-edu projects",
            "commands": [
                "ts-node ./src/index.ts --clone",
                "ts-node ./src/index.ts --aggregate --aggregator gitHours --projects hedu-collboard-integration"
            ],
            "onlySingle": true,
            "focus": true
        },
        {
            "name": "📋⚙️ List workflows",
            "command": "ts-node ./src/index.ts --list-workflows",
            "onlySingle": true,
            "focus": true
        }
    ]
}
